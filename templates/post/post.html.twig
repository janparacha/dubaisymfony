{% extends 'layout.html.twig' %}

{% block title %} Articles {% endblock %}

{% block body %}

    {% for post in posts %}

        <h2> {{ post.title }} </h2>

        <img src= '{{ asset(app_cdn ~'produits/' ~ post.picture) }}' alt='articles {{ post.slug }}'/>

        <p> {{post.content | u.truncate(1000,'',false) | raw}} </p>

        <p> {{post.createdAt | date }} </p>
    {% endfor %}

{% endblock %}
